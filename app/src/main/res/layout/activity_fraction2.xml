<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorAccent"

    tools:context="com.master.math.activity.Fraction2Activity">

    <TextView
        android:id="@+id/multiplyAns1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="48dp"
        android:text="99"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/num1"
        app:layout_constraintEnd_toEndOf="@+id/line1"
        app:layout_constraintStart_toStartOf="@+id/line1" />

    <TextView
        android:id="@+id/num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="24dp"
        android:text="99"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/line1"
        app:layout_constraintEnd_toEndOf="@+id/line1"
        app:layout_constraintStart_toStartOf="@+id/line1" />

    <TextView
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="32dp"
        android:layout_marginEnd="8dp"
        android:text="___"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/compareLine"
        app:layout_constraintEnd_toStartOf="@+id/compareLine"
        app:layout_constraintTop_toTopOf="@+id/compareLine" />

    <TextView
        android:id="@+id/denom1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="99"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="60dp"
        app:layout_constraintEnd_toEndOf="@+id/line1"
        app:layout_constraintStart_toStartOf="@+id/line1"
        app:layout_constraintTop_toBottomOf="@+id/line1" />

    <TextView
        android:id="@+id/compareLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="128dp"
        android:text="___"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/multiplyAns2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="48dp"
        android:text="99"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/num2"
        app:layout_constraintEnd_toEndOf="@+id/line2"
        app:layout_constraintStart_toStartOf="@+id/line2" />

    <TextView
        android:id="@+id/num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"

        android:text="99"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/line2"
        app:layout_constraintEnd_toEndOf="@+id/line2"
        app:layout_constraintStart_toStartOf="@+id/line2" />

    <TextView
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="32dp"
        android:layout_marginStart="8dp"
        android:text="___"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/compareLine"
        app:layout_constraintStart_toEndOf="@+id/compareLine"
        app:layout_constraintTop_toTopOf="@+id/compareLine" />

    <TextView
        android:id="@+id/denom2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="99"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="60dp"
        app:layout_constraintEnd_toEndOf="@+id/line2"
        app:layout_constraintStart_toStartOf="@+id/line2"
        app:layout_constraintTop_toBottomOf="@+id/line2" />

    <TextView
        android:id="@+id/greaterSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text=">"

        android:textColor="@color/colorPrimaryDark"
        android:textSize="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/equalSign"
        app:layout_constraintEnd_toStartOf="@+id/equalSign"
        app:layout_constraintTop_toTopOf="@+id/equalSign" />

    <TextView
        android:id="@+id/equalSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"

        android:text="="
        android:textColor="@color/colorPrimaryDark"
        android:textSize="60dp"
        app:layout_constraintEnd_toEndOf="@+id/compareLine"
        app:layout_constraintStart_toStartOf="@+id/compareLine"
        app:layout_constraintTop_toBottomOf="@+id/compareLine" />

    <TextView
        android:id="@+id/lessSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"

        android:text="&lt;"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/equalSign"
        app:layout_constraintStart_toEndOf="@+id/equalSign"
        app:layout_constraintTop_toTopOf="@+id/equalSign" />

    <TextView
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="32dp"
        android:text="help"
        android:drawableTop="@drawable/ic_002_question"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="32dp"
        android:text="skip"
        android:drawableTop="@drawable/ic_001_next"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/multiplyFormula1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="99 x 99 ="
        android:textSize="30dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/multiplyFormula2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="99 x 99 ="
        android:textSize="30dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/seatworkNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="62dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
