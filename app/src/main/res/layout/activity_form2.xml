<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorAccent"

    tools:context="com.master.math.activity.Form2Activity">

    <TextView
        android:id="@+id/formula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="128dp"

        android:text="TextView"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/userAns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="32dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:inputType="number"
        android:maxLength="4"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDarkFaded"
        android:textSize="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/formula"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/formula"
        app:layout_constraintTop_toTopOf="@+id/formula" />

    <TextView
        android:id="@+id/open"
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="Open Scratch"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="@+id/formula"
        app:layout_constraintStart_toStartOf="@+id/formula"
        app:layout_constraintTop_toBottomOf="@+id/formula" />

    <Button
        android:id="@+id/doneClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimaryDark"
        android:text="DONE"

        android:textColor="@color/colorAccent"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/userAns"
        app:layout_constraintStart_toStartOf="@+id/userAns"
        app:layout_constraintTop_toBottomOf="@+id/userAns" />
</android.support.constraint.ConstraintLayout>
